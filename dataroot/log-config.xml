<!-- 日志配置文件 -->
<log-config>
		<logLevel>debug</logLevel>

		<logBinding>
			<debug>log-debug</debug>
			<info>log-info</info>
			<warn>log-warn</warn>
			<error>log-error</error>
		</logBinding>
		
		<logHandler>
			<id>log-debug</id>
			<prefix>Debug</prefix>
			<suffix>.log</suffix>
			<spanType>Day</spanType>
			<usingBuffer>N</usingBuffer>
			<bufferSize>10000</bufferSize>
		</logHandler>
		<logHandler>
			<id>log-info</id>
			<prefix>Info</prefix>
			<suffix>.log</suffix>
			<spanType>Month</spanType>
			<usingBuffer>N</usingBuffer>
			<bufferSize>10000</bufferSize>
		</logHandler>
		<logHandler>
			<id>log-warn</id>
			<prefix>Warn</prefix>
			<suffix>.log</suffix>
			<spanType>Month</spanType>
			<usingBuffer>N</usingBuffer>
			<bufferSize>10000</bufferSize>
		</logHandler>
		<logHandler>
			<id>log-error</id>
			<prefix>Error</prefix>
			<suffix>.log</suffix>
			<spanType>Month</spanType>
			<usingBuffer>N</usingBuffer>
			<bufferSize>10000</bufferSize>
		</logHandler>
</log-config>
	